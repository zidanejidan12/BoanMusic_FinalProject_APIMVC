@model SpotifyWeb.Models.ViewModel.LoginVM

<!DOCTYPE html>
<html>
<head>
    <title>Login</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }

        .login-container {
            max-width: 400px;
            margin: auto;
            margin-top: 100px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        h2 {
            text-align: center;
            margin-bottom: 30px;
            color: #333333;
        }

        .form-control {
            border: 1px solid #ced4da;
            border-radius: 4px;
            padding: 12px;
            margin-bottom: 20px;
        }

        .btn-login {
            background-color: #1db954;
            color: #ffffff;
            padding: 12px 20px;
            border: none;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s ease;
            width: 100%;
        }

        .btn-login:hover {
            background-color: #0e8048;
        }

        .error-message {
            color: red;
            margin-bottom: 10px;
            text-align: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="login-container">
            <h2>Login</h2>
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="error-message">
                    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                </div>
            }
            <form method="post">
                <div class="mb-3">
                    <input type="text" class="form-control" name="Username" placeholder="Username" value="@Model.Username" required />
                </div>
                <div class="mb-3">
                    <input type="password" class="form-control" name="Password" placeholder="Password" value="@Model.Password" required />
                </div>
                <button type="submit" class="btn btn-login">Login</button>
            </form>
        </div>
    </div>
</body>
</html>
